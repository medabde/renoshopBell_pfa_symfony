                <a href=""><img class="header-icon" src="../assets/img/icons8_compare_32px.png" alt=""></a>
                </div>
                <img class="product-img" src="{{article.image}}" height="500" width="700" alt="">
            </div>
            <div class="product-item-title"><a href="{{ path('detail', {'id' : article.id})}}">{{article.titre}}</a></div>
            <div class="product-item-price">{{article.price}} DH</div>
            <div class="product-item-stars">
                {% if article.reviews == 1 %}
                <img class="header-icon" src="../assets/img/icons8_star_filled_48px.png" alt="">
                {% endif %}
                {% if article.reviews == 2 %}
