        </div>
      </div>
      <div class="col-9">

		<div class="products-list-wrap">
          <!-- Products Filters-->
          <div class="products-filters">
            <div class="products-result-count">Showing {{ articles|length }} results</div>
        </div>




        <div class="products-list-wrap">
          

          <!-- Products List-->
          <div class="products-list-full-grid">

            {% for article in articles %}
            <div class="product-item">
            <div class="product-item-img">
                <div class="product-item-icons">
                <a href="{{ path('panier_add', {'id' : article.id})}}"><img class="header-icon" src="../assets/img/icons8_shopping_cart_24px.png" alt=""></a>
